---
layout: layouts/base.njk
section: board
---
<nav>
  <a href="/board" class="back">← Back</a>
</nav>

<h1>{{ title }}</h1>

{{ layoutContent | safe }}

<article>
  <p><em>{{ position }}</em></p>

  {% if image %}
  <div class="img-container medium float-left">
    <picture>
      <source type="image/webp" srcset="{{ image.webp }}" />
      <img type="image/jpeg" src="{{ image.jpg }}" alt="{{ title }}" class="border" />
    </picture>
  </div>
  {% endif %}
  {% if bio %}
  {{ bio | markdownify | safe }}
  {% endif %}
</article>

<nav>
  <a href="/board" class="back">← Back</a>
</nav>
