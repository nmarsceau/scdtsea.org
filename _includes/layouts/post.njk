---
layout: layouts/base.njk
section: post
---
<nav>
  <a href="/news" class="back">← Back</a>
</nav>

<article>
  <h1>{{ title | safe }}</h1>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
    </small>
    {% if tags %}
      {% for tag in tags %}
        {%- if tag !== "post" -%}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}
          <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
        {%- endif -%}
      {% endfor %}
    {% endif %}
  </p>

  {{ layoutContent | safe }}

</article>

<nav>
  <a href="/news" class="back">← Back</a>
</nav>
