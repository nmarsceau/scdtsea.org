<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">
	{% include "components/head.njk" %}
	<body>
		<header>
      <div>
        <a href="{{ '/' | url }}">
          <picture>
            <source type="image/webp" media="(max-width: 400px)" srcset="/static/img/logo/xs.webp" />
            <source type="image/webp" media="(max-width: 700px)" srcset="/static/img/logo/sm.webp" />
            <source type="image/webp" media="(max-width: 1150px)" srcset="/static/img/logo/md.webp" />
            <source type="image/webp" media="(min-width: 1150px)" srcset="/static/img/logo/lg.webp" />
            <source type="image/png" media="(max-width: 400px)" srcset="/static/img/logo/xs.png" />
            <source type="image/png" media="(max-width: 700px)" srcset="/static/img/logo/sm.png" />
            <source type="image/png" media="(max-width: 1150px)" srcset="/static/img/logo/md.png" />
            <img type="image/png" src="/static/img/logo/lg.png" alt="SCDTSEA" />
          </picture>
        </a>
      </div>
			{% include "components/nav.njk" %}
		</header>
		<main>
			{{ layoutContent | safe }}
		</main>
		{% include "components/footer.njk" %}
    <script src="/_includes/assets/js/extra.js"></script>
    {% if containsForm %}
    <script src="/_includes/assets/js/validate_form.js"></script>
    {% endif %}
    {% if containsCount %}
    <script src="/_includes/assets/js/character_counter.js"></script>
    {% endif %}
    {% if containsGallery %}
    <script src="/_includes/assets/js/slider.js"></script>
    {% endif %}
	</body>
</html>
