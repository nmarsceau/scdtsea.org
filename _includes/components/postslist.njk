<section class="posts-list">
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %}>
			<h2>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title | safe }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h2>
      <small>
        <time datetime="{{ post.date | machineDate }}" class="timestamp">{{ post.date | readableDate }}</time>
      </small>
      {% if post.data.tags %}
        {% for tag in post.data.tags %}
          {%- if tag !== "post" -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
			{% endif %}
			{% if post.data.summary %}
				<p>{{ post.data.summary }}</p>
			{% endif %}
		</article>
	{% endfor %}
</section>
